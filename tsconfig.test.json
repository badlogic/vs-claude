{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "outDir": "build/extension",
    "lib": ["es2020"],
    "sourceMap": true,
    "rootDirs": ["src", "test"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": ["node_modules", ".vscode-test", "vscode", "mcp", "test/test-workspace", "src/views"]
}