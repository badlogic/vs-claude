{
  "name": "vs-claude",
  "displayName": "VS Claude",
  "description": "MCP server for Claude to control VS Code",
  "version": "0.0.1",
  "publisher": "vs-claude",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/badlogic/vs-claude"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./build/extension/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vs-claude.showSetup",
        "title": "VS Claude: Install MCP"
      },
      {
        "command": "vs-claude.uninstall",
        "title": "VS Claude: Uninstall MCP"
      },
      {
        "command": "vs-claude.testTool",
        "title": "VS Claude: Test Tool"
      },
      {
        "command": "vs-claude.showLogs",
        "title": "VS Claude: Show Logs"
      },
      {
        "command": "vs-claude.initializeLSPs",
        "title": "VS Claude: Initialize Language Servers"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./ && node scripts/build-webviews.js && ./scripts/build-binaries.sh",
    "build:debug": "tsc -p ./ && node scripts/build-webviews.js && cd mcp && go build -o ../build/mcp/mcp-server-$(go env GOOS)-$(go env GOARCH)$(go env GOEXE) . && cd ..",
    "watch": "concurrently \"tsc -watch -p ./\" \"node scripts/build-webviews.js --watch\"",
    "check": "biome check --write ./src && cd mcp && go fmt ./... && cd .. && tsc --noEmit",
    "test": "rm -rf build && npm run build && tsc -p ./tsconfig.test.json && cp -r test/test-workspace build/extension/test/ && node test/setup-test-workspace.js && node ./build/extension/test/runTest.js",
    "clean": "rm -rf build/",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@tailwindcss/forms": "^0.5.10",
    "@types/glob": "^8.1.0",
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.0.0",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.3.0",
    "autoprefixer": "^10.4.21",
    "chalk": "^4.1.2",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.5",
    "glob": "^8.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "lit": "^3.3.0",
    "minimatch": "^10.0.3",
    "mocha": "^10.2.0",
    "postcss": "^8.5.6",
    "sinon": "^17.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "biome check --write"
    ],
    "mcp/**/*.go": [
      "gofmt -w"
    ]
  }
}
