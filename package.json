{
  "name": "vs-claude",
  "displayName": "VS Claude",
  "description": "MCP server for Claude to control VS Code",
  "version": "0.0.1",
  "publisher": "mariozechner",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/badlogic/vs-claude"
  },
  "bugs": {
    "url": "https://github.com/badlogic/vs-claude/issues"
  },
  "homepage": "https://github.com/badlogic/vs-claude#readme",
  "license": "MIT",
  "author": "Mario Zechner",
  "keywords": [
    "vscode",
    "mcp",
    "claude",
    "ai",
    "assistant"
  ],
  "engines": {
    "vscode": "^1.74.0",
    "node": ">=16.0.0"
  },
  "files": [
    "build/extension/**/*",
    "build/mcp/**/*",
    "README.md",
    "LICENSE",
    "logo.png"
  ],
  "categories": [
    "Other"
  ],
  "main": "./build/extension/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vs-claude.showSetup",
        "title": "VS Claude: Install MCP"
      },
      {
        "command": "vs-claude.uninstall",
        "title": "VS Claude: Uninstall MCP"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "node scripts/build-extension.js && ./scripts/build-mcp-server.sh",
    "build:debug": "node scripts/build-extension.js --debug && ./scripts/build-mcp-server.sh --debug",
    "build:test": "./scripts/build-tests.sh",
    "build:vsix": "npm run clean && npm run build && vsce package",
    "check": "./scripts/check.sh",
    "test": "npm run build:test && node ./build/extension/test/runTest.js",
    "clean": "rm -rf build/",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@tailwindcss/forms": "^0.5.10",
    "@types/glob": "^8.1.0",
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.0.0",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.3.0",
    "autoprefixer": "^10.4.21",
    "chalk": "^4.1.2",
    "concurrently": "^9.2.0",
    "esbuild": "^0.25.5",
    "glob": "^8.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "lit": "^3.3.0",
    "minimatch": "^10.0.3",
    "mocha": "^10.2.0",
    "postcss": "^8.5.6",
    "sinon": "^17.0.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "biome check --write"
    ],
    "mcp/**/*.go": [
      "gofmt -w"
    ]
  }
}
