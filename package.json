{
  "name": "vs-claude",
  "displayName": "VS Claude",
  "description": "MCP server for Claude to control VS Code",
  "version": "0.0.1",
  "publisher": "vs-claude",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/badlogic/vs-claude"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onStartupFinished"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "contributes": {
    "commands": [
      {
        "command": "vs-claude.showSetup",
        "title": "VS Claude: Install MCP"
      },
      {
        "command": "vs-claude.uninstall",
        "title": "VS Claude: Uninstall MCP"
      },
      {
        "command": "vs-claude.testQuery",
        "title": "VS Claude: Test Query Tool"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./ && ./scripts/build-binaries.sh",
    "check": "biome check --write ./src && cd mcp && go fmt ./... && cd .. && tsc --noEmit",
    "test": "rm -rf out && tsc -p ./ && cd mcp && go build -o ../bin/mcp-server-$(go env GOOS)-$(go env GOARCH)$(go env GOEXE) . && cd .. && tsc -p ./tsconfig.test.json && cp -r test/test-workspace out/test/ && node test/setup-test-workspace.js && node ./out/test/runTest.js",
    "clean": "rm -rf out/ bin/",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@types/glob": "^8.1.0",
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.0.0",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.3.0",
    "chalk": "^4.1.2",
    "glob": "^8.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "minimatch": "^10.0.3",
    "mocha": "^10.2.0",
    "sinon": "^17.0.1",
    "typescript": "^5.0.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "biome check --write"
    ],
    "mcp/**/*.go": [
      "gofmt -w"
    ]
  }
}
