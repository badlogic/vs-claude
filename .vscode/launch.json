{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--profile=vs-claude-debug",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/build/extension/**/*.js"
            ],
            "preLaunchTask": "npm: build:debug"
        },
        {
            "name": "Run Extension (Watch)",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--profile=vs-claude-debug",
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/build/extension/**/*.js"
            ],
            "preLaunchTask": "npm: watch"
        },
        {
            "name": "Extension Tests",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--profile=vs-claude-test",
                "--extensionDevelopmentPath=${workspaceFolder}",
                "--extensionTestsPath=${workspaceFolder}/build/test/runTest",
                "${workspaceFolder}/test/test-workspace"
            ],
            "outFiles": [
                "${workspaceFolder}/build/**/*.js"
            ],
            "preLaunchTask": "npm: test:build",
            "env": {
                "CI": "true"
            }
        }
    ]
}