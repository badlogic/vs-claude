{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": "$tsc",
      "label": "npm: build",
      "detail": "Build TypeScript and Go binaries",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "showReuseMessage": false,
        "close": true
      }
    },
    {
      "type": "npm",
      "script": "build:debug",
      "problemMatcher": "$tsc",
      "label": "npm: build:debug",
      "detail": "Build TypeScript and Go binaries for debugging",
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "showReuseMessage": false,
        "close": true
      }
    },
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": "build"
    },
    {
      "label": "npm: test:build",
      "type": "shell",
      "command": "rm -rf build && npm run build && npx tsc -p ./tsconfig.test.json && cp -r test/test-workspace build/extension/test/ && cp -r scripts build/ && cp logo.png build/extension/ 2>/dev/null || true && node scripts/setup-test-extensions.js && node test/setup-test-workspace.js",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "silent",
        "panel": "dedicated",
        "showReuseMessage": false
      }
    }
  ]
}